<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:sl="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pause_ui">

    <teamwarpcbstuido.IESEKI.org.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main_sl"

        sl:scale_base_width="336"
        sl:scale_base_height="560">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pause_btn_return"
            android:background="@drawable/btn_return"

            sl:scale_left="10"
            sl:scale_top="450"
            sl:scale_width="150"
            sl:scale_height="75" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:background="@drawable/swt_text"

            sl:scale_left="50"
            sl:scale_top="300"
            sl:scale_width="100"
            sl:scale_height="50"
            sl:scale_textsize="15" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/custom_switch_music"

            sl:scale_left="50"
            sl:scale_top="300"
            sl:scale_width="250"
            sl:scale_height="50"
            sl:scale_textsize="15" />


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pause_btn_gomain"
            android:background="@drawable/btn_gomain"

            sl:scale_left="176"
            sl:scale_top="450"
            sl:scale_width="150"
            sl:scale_height="75" />

        </teamwarpcbstuido.IESEKI.org.ScalableLayout>

</RelativeLayout>
