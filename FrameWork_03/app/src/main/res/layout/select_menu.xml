<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:sl="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/select_background">

    <teamwarpcbstuido.IESEKI.org.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main_sl"

        sl:scale_base_width="480"
        sl:scale_base_height="800">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/select_btn_start"
            android:background="@drawable/btn_gamestart"

            sl:scale_left="125"
            sl:scale_top="350"
            sl:scale_width="250"
            sl:scale_height="125" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/select_btn_help"
            android:background="@drawable/btn_help"

            sl:scale_left="125"
            sl:scale_top="450"
            sl:scale_width="250"
            sl:scale_height="125" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/select_btn_option"
            android:background="@drawable/btn_option"

            sl:scale_left="125"
            sl:scale_top="550"
            sl:scale_width="250"
            sl:scale_height="125" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/select_btn_quit"
            android:background="@drawable/btn_quit"

            sl:scale_left="125"
            sl:scale_top="650"
            sl:scale_width="250"
            sl:scale_height="125" />

    </teamwarpcbstuido.IESEKI.org.ScalableLayout>

</RelativeLayout>
